
<div class="row zhuce">
  <div class="col-md-4 col-md-offset-4 text-center" style="background-color: rgba(250, 250, 250, 0.8); margin-top: 150px">
    <br>
    <br>
    <h2>登录</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, " 登录 ", :class => "btn btn-danger"  %>
    <%= link_to "没有账号，点击注册", new_registration_path(resource_name), :class => "btn btn-default"  %>
    <%= link_to "忘记密码?", new_password_path(resource_name) %>
  </div>
<% end %>

<br>
<br>
<br>

</div>
</div>
