

  <% if current_user %>
    <div class="pull-right">
      <% if current_user && current_user.admin? %>
        <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
      <% end %>
    </div>
  <% end %>
<br><br>
<h2 class="text-center">招聘首页</h2>
<br>
<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
        <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按照发表时间排序", jobs_path ) %>
    </li>
  </ul>
</div>
<div>
<table class="table table-boldered">
  <thead>
    <tr>
      <th>职缺</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>刊登时间</th>
      <% if current_user && current_user.admin? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %> 元 </td>
        <td><%= job.wage_upper_bound %> 元 </td>
        <td><%= job.created_at %></td>
        <% if current_user && current_user.admin? %>
          <td>
            <%= link_to("Edit", edit_job_path(job)) %> |
            <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
