<div style="height: 100px"></div>
<div class="col-md-6 col-md-offset-3 kuang">

  <h2>修改用户信息
    <!-- <#%= resource_name.to_s.humanize %> -->
  </h2>

  <br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <!-- <#%= f.input :password, autocomplete: "off", hint: "如果您不想更改它，请将其留空", required: false %>
    <#%= f.input :password_confirmation, required: false %> -->
    <%= f.input :current_password, hint: "我们需要您当前的密码来确认您的更改", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交更改", :class => "btn btn-danger" %>
  </div>
<% end %>
<br>
<br>

<h3>删除此账号</h3>

<p>Unhappy? <%= link_to "删除此账号[谨慎操作，不可恢复]", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


</div>
