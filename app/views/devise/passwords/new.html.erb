<div class="row zhuce">
  <div class="col-md-4 col-md-offset-4 text-center" style="background-color: rgba(250, 250, 250, 0.8); margin-top: 150px">
<br>
<br>
<h2>申请重置密码</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "发送重置密码邮件", :class => "btn btn-danger"   %>
    <%= link_to "想起密码了，返回登录", new_session_path(resource_name), :class => "btn btn-default"  %>
  </div>
<% end %>


<br>
<br>
<br>
</div>
</div>
