<div class="row zhuce">
  <div class="col-md-4 col-md-offset-4 text-center" style="background-color: rgba(250, 250, 250, 0.8); margin-top: 150px">
<br>
<br>
<h2>新用户注册</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交注册", :class => "btn btn-danger"  %>
    <%= link_to "已有账号，直接登录", new_session_path(resource_name), :class => "btn btn-default"  %>
  </div>
<% end %>
<br>
<br>
<br>
</div>
</div>
